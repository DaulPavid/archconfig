[user]
    email = <email>
    name = Paul David
[core]
    editor = vim
    whitespace = fix, -indent-with-non-tab, trailing-space, cr-at-eol, tabwidth=4
    excludesfile = ~/.gitignore
[alias]
    a = add
    ct = commit -v
    co = checkout
    pf = push --force-with-lease
    s = status
[push]
    ff = only
[merge]
    conflictstyle = diff3
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[grep]
    lineNumber = true
[alias]
    d = difftool
[commit]
    template = ~/.gitmessage
